@{
    ViewData["Title"] = "Data";
}

@section Styles {
    @* <link href="https://unpkg.com/bootstrap-table@1.21.2/dist/bootstrap-table.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" /> *@
}

@section Scripts {
    @* <script src="https://unpkg.com/bootstrap-table@1.21.2/dist/bootstrap-table.min.js"></script> *@
    <script src="~/js/home.min.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="row">
        <form id="editorForm">
            <div class="row">
                <div class="col-md-6">
                    <label for="txtAgreementNumber" class="form-label">Agreement Number</label>
                    <input type="text" class="form-control" id="txtAgreementNumber"
                        placeholder="Input Agreement Number" />
                </div>

                <div class="col-md-6">
                    <label for="txtTanggalFaktur" class="form-label">Tanggal Faktur</label>
                    <input type="text" class="form-control" id="txtTanggalFaktur" placeholder="mm/dd/yyyy" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="txtBranchId" class="form-label">Branch ID</label>
                    <input type="text" class="form-control" id="txtBranchId" placeholder="Input Branch Id" />
                </div>

                <div class="col-md-6">
                    <label for="txtNoPolisi" class="form-label">Nomor Polisi</label>
                    <input type="text" class="form-control" id="txtNoPolisi" placeholder="Input Nomor Polisi" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <label for="txtNoBpkb" class="form-label">No. BPKB</label>
                    <input type="text" class="form-control" id="txtNoBpkb" placeholder="Input No. BPKB" />
                </div>

                <div class="col-md-6">
                    <label for="cboLokasiPenyimpanan" class="form-label">Lokasi Penyimpanan</label>
                    <select name="cboLokasiPenyimpanan" id="cboLokasiPenyimpanan" class="form-control">
                        <option value="">Select Lokasi Penyimpanan</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="txtTglBpkbIn" class="form-label">Tgl BPKB In</label>
                    <input type="text" class="form-control" id="txtTglBpkbIn" placeholder="mm/dd/yyyy" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="txtTglBpkb" class="form-label">Tgl BPKB</label>
                    <input type="text" class="form-control" id="txtTglBpkb" placeholder="mm/dd/yyyy" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="txtNoFaktur" class="form-label">No. Faktur</label>
                    <input type="text" class="form-control" id="txtNoFaktur" placeholder="Input No. Faktur" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <button type="reset" class="btn btn-primary btn-lg btn-block">Cancel</button>
                </div>

                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>